    <script type="text/javascript" src="@Url.Content("~/mediaplayer/jwplayer.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/mediaplayer/flowplayer-3.2.9.min.js")"></script>
    <title>THƯ VIỆN SỐ TRƯỜNG ĐẠI HỌC HÀ NỘI | HANU DIGITAL LIBRARY 2012</title>
