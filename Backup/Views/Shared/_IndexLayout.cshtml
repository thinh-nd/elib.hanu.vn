<body>
    <div id="wrapper">
        <div id="wrapper2">
            <!-- Header -->
            <div id="header">
                <div id="wrapper3">
                    <!-- Logo -->
                    <div id="logo">
                        <img src="@Url.Content("~/Content/K-144/images/logo.png")" alt="HANULogo" width="75px"/>
                        <h1 style="width: 66%">
                            THƯ VIỆN SỐ TRƯỜNG ĐẠI HỌC HÀ NỘI</h1>
