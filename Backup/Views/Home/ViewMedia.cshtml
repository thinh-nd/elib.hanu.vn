@model QML.Web.UI.Areas.DocumentAdmin.Models.DocumentEssential

@{
    ViewBag.Title = Model.Title + " - Đọc sách Online - Hanoi University | E-Library";    
}
<script type="text/javascript" src="@Url.Content("~/mediaplayer/jwplayer.js")"></script>
<div id="common-wrapper">
    <center>
        <h2 style="text-shadow: 0px 0px 5px red">@Model.Title</h2>
        <h4><b>Tác giả:</b> <i>@Model.Creator</i></h4>
        <h4><b>Nhà xuất bản:</b> <i>@Model.Publisher</i></h4>
       
    </center>

    <br />
    <center>
        <div class="article">
        @{
            string doc_format = ViewBag.doc_format;
        }
        @if (doc_format == "mp3" || doc_format == "wav")
        {
            <a href="@Url.Content("~/Resources/" + Model.FileSource)" 
            style="display:block;width:680px;height:30px;border: 5px solid white; border-radius: 10px; box-shadow: 0px 0px 5px 1px black;" id="player">
            </a>
            
        }
        else {
            <a href="@Url.Content("~/Resources/" + Model.FileSource)" 
            style="display:block;width:680px;height:480px;border: 5px solid white; border-radius: 10px; box-shadow: 0px 0px 5px 1px black;" id="player">
            </a>
        }        
        
        <script language="JavaScript">
                flowplayer("player", "@Url.Content("~/mediaplayer/flowplayer-3.2.10.swf")", {
                    clip: {
                        autoPlay: true,
                        autoBuffering: true,
                    },
                    hdButton: {
                        place: 'both',
                        // custom labels for the HD splash
                        splash: {
                            onLabel: 'enabled',
                            offLabel: 'disabled'
                        }
                    },
                    plugins: {
                        audio: {
                            url: '@Url.Content("~/mediaplayer/flowplayer.audio-3.2.9.swf")',
                        },
                        controls: {
                            fullscreen: true,
                            height: 30,
                            autoHide: true
                        }
                    }
                });
            </script>
       

        </div>
        <br />
        @Html.ActionLink("Quay về trang chủ", "Index", null, new { style="font-size: 1.5em;" })
    </center>
</div>


