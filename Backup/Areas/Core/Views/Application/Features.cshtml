@model IEnumerable<Feature>
@{
    ViewBag.Title = "Features";
}
<table class="datatable full">
    <thead>
        <tr>
            <th>
                @Html.Localize("No.")
            </th>
            <th>
                @Html.Localize("Name")
            </th>
            <th>
                @Html.Localize("Description")
            </th>
            <th>
                @Html.Localize("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        { 
            <tr>
                <td>
                    @(i + 1)
                </td>
                <td>
                    @Model.ElementAt(i).TranslatedName
                </td>
                <td>
                    @Model.ElementAt(i).TranslatedDescription
                </td>
                <td>
                    <ul class="action-buttons">
                        <li>
                            @Html.ActionLinkButtonSecured(Html.Localize("Modules"), "view-list", "Modules", "Application", "Core", new { area = "Core", featureId = Model.ElementAt(i).FeatureId }, "no-text")
                        </li>
                        <li>
                            @Html.ActionLinkButtonSecured(Html.Localize("Edit"), "pencil", "EditFeature", "Application", "Core", new { area = "Core", id = Model.ElementAt(i).FeatureId }, "no-text")
                        </li>
                        <li>
                            @Html.ActionLinkButtonSecured(Html.Localize("Delete"), "bin", "DeleteFeature", "Application", "Core", new { area = "Core", id = Model.ElementAt(i).FeatureId }, "no-text confirm")
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLinkButtonSecured(Html.Localize("Create feature"), "add", "CreateFeature", "Application", "Core", new { area = "Core" })
</p>
