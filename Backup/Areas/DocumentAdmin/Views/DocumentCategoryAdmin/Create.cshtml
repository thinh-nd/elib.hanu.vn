@model QML.Web.UI.Areas.DocumentAdmin.Models.DocumentCategoriesModel

@{
    ViewBag.Title = "QUẢN LÝ BỘ SƯU TẬP TÀI LIỆU";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
						
<fieldset class="form">
    <legend>Thêm mới bộ sưu tập</legend>				
	@using (Html.BeginForm())
    {
            @Html.ValidationSummary(true)     
            <label>
            @Html.Localize("Tên bộ sưu tập")
            </label>
            @Html.EditorFor(model => model.CategoryName)
            <label>
            @Html.Localize("Thuộc bộ sưu tập")	
            </label>
            @Html.DropDownListFor(model => model.ParentID, (IEnumerable<SelectListItem>)@ViewBag.ParentList, new { @Class = "styled" })

            <div class="action">
                <button class="button button-green">@Html.Localize("Thêm mới")</button>
                @Html.ActionLinkButtonSecured(Html.Localize("Hủy bỏ"), null, "Index", "DocumentCategoryAdmin", "DocumentAdmin")
            </div>
            
    }

</fieldset>
