@{
    ViewBag.Title = "QUẢN LÝ TÀI LIỆU";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
						
<fieldset class="form">
    <legend>Thực hiện chuyển trạng thái tài liệu</legend>				
	@using (Html.BeginForm("setStatus", "Document", FormMethod.Post))
    {

            <label>
            @Html.Localize("Chọn danh mục:")	
            </label>
            <input type="hidden" name="listID" value="@ViewBag.ListID" />
            @Html.DropDownList("Status", (IEnumerable<SelectListItem>)@ViewBag.StatusList, new { @Class = "styled" })
            <div class="action">
                <button class="button button-green">@Html.Localize("Chuyển")</button>
                @Html.ActionLinkButtonSecured(Html.Localize("Hủy bỏ"), null, "Index", "DocumentCategoryAdmin", "DocumentAdmin")
            </div>
            
    }

</fieldset>
