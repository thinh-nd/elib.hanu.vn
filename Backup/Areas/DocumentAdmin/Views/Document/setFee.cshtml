@{
    ViewBag.Title = "QUẢN LÝ TÀI LIỆU";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<fieldset class="form">
        <legend>Cập nhật phí xem tài liệu: <h3 style="color:Green;">@ViewBag.DocumentName</h3></legend>
@using (Html.BeginForm("setFee", "Document"))
{
    @Html.ValidationSummary(true)
            <input type="hidden" name="DocumentID" value="@ViewBag.id" />
            <label style="padding-top:5px;">
            @Html.Localize("Nhập phí xem (VND)")
            </label>
            <input type="text" name="fee" value="@ViewBag.DocumentFee" />
             <div class="action">
                <button class="button button-green" onclick="this.form.submit()">@Html.Localize("Cập nhật")</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                @Html.ActionLinkButtonSecured(Html.Localize("Hủy bỏ"), null, "Index", "Document", "DocumentAdmin")
            </div> 
}
</fieldset>
<div>
    @Html.ActionLink("Quay lại trang chính", "Index")
</div>