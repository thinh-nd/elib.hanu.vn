@model QML.Web.UI.Areas.DocumentAdmin.Models.DocumentModel

@{
    ViewBag.Title = "QUẢN LÝ TÀI LIỆU";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //submit form
        $("#form").submit(function () {
            var _year = $("#Date").val();
            $("#Date").val(_year + "/01/01");
        });
        //when loaded form, delete day and month, show year only
        $("#Date").val("@ViewBag.Year");
    });
</script>
<style>
    
#Title { width:500px; }
</style>
<fieldset class="form">
        <legend>Biên mục tài liệu: <h3 style="color:Green;">@ViewBag.DocumentName</h3></legend>
@using (Html.BeginForm("ExtraInfoMultipleFile", "Document", FormMethod.Post, new { id="form"}))
{
    @Html.ValidationSummary(true)
            <input type="hidden" name="listID" value="@ViewBag.ListID" />
    
            <label style="padding-top:5px;">
            @Html.Localize("Nhan đề")
            </label>
            @Html.EditorFor(model => model.Title, new { width = "500" })
            
            <label style="padding-top:5px;">
            @Html.Localize("Tác giả")
            </label>
            @Html.EditorFor(model => model.Creator)
            
            <label style="padding-top:5px;">
            @Html.Localize("Chủ đề")
            </label>
            @Html.EditorFor(model => model.Subject)  
            
            <label style="padding-top:5px;">
            @Html.Localize("Tóm tắt")
            </label>
            @Html.TextAreaFor(model => model.Description, new { cols = 50, rows = 5 })
            
            <label style="padding-top:5px;">
            @Html.Localize("Nhà xuất bản")
            </label>
            @Html.EditorFor(model => model.Publisher)

            <label style="padding-top:5px;">
            @Html.Localize("Tác giả phụ")
            </label>
            @Html.EditorFor(model => model.Contributor)

            <label style="padding-top:5px;">
            @Html.Localize("Năm xuất bản")
            </label>
            @Html.EditorFor(model => model.Date)
            <label style="padding-top:5px;">
            @Html.Localize("Loại (Kiểu)")
            </label>
            @Html.EditorFor(model => model.Type)
            
            <label style="padding-top:5px;">
            @Html.Localize("Mô tả vật lý")
            </label>
            @Html.EditorFor(model => model.Format)

            <label style="padding-top:5px;">
            @Html.Localize("Định danh")
            </label>
            @Html.EditorFor(model => model.Identifier)

            <label style="padding-top:5px;">
            @Html.Localize("Nguồn")
            </label>
            @Html.EditorFor(model => model.Resource)
            
            <label style="padding-top:5px;">
            @Html.Localize("Ngôn ngữ")
            </label>
            @Html.EditorFor(model => model.Language)

            <label style="padding-top:5px;">
            @Html.Localize("Liên kết")
            </label>
            @Html.EditorFor(model => model.Relation)

            <label style="padding-top:5px;">
            @Html.Localize("Đ/c lưu trữ")
            </label>
            @Html.EditorFor(model => model.Coverage)

            <label style="padding-top:5px;">
            @Html.Localize("Bản quyền")
            </label>
            @Html.EditorFor(model => model.Right)

        <p>
             <div class="action">
                <button class="button button-green">@Html.Localize("Cập nhật")</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                @Html.ActionLinkButtonSecured(Html.Localize("Hủy bỏ"), null, "Index", "Document", "DocumentAdmin")
            </div>
        </p>    
}
</fieldset>
<div>
    @Html.ActionLink("Quay về danh sách", "Index")
</div>
