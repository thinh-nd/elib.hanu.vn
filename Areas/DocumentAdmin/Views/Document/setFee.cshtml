@{
    ViewBag.Title = "QUẢN LÝ TÀI LIỆU";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<fieldset class="form">
    <legend>Cập nhật phí xem tài liệu</legend>
    @using (Html.BeginForm("setFee", "Document"))
    {
        @Html.ValidationSummary(true)
        <input type="hidden" id="page" name="page" value="@ViewBag.IndexPage" />
        <input type="hidden" id="cate" name="cate" value="@ViewBag.Category" />
        <input type="hidden" id="keyword" name="keyword" value="@ViewBag.Keyword" />
        <input type="hidden" id="attribute" name="attribute" value="@ViewBag.Attribute" />
        <input type="hidden" id="value" name="value" value="@ViewBag.Value" />
        <input type="hidden" name="listID" value="@ViewBag.ListID" />

        <label style="padding-top:5px;">
            @Html.Localize("Nhập phí xem (VND)")
        </label>
        <input type="text" name="fee" value="" />
        <div class="action">
            <button class="button button-green" onclick="this.form.submit()">@Html.Localize("Cập nhật")</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            @Html.ActionLinkButtonSecured(Html.Localize("Hủy bỏ"), null, "Index", "Document", "DocumentAdmin")
        </div>
    }
</fieldset>
<div>
    @Html.ActionLink("Quay lại trang chính", "Index")
</div>