@model IEnumerable<CoreAction>
@{
    ViewBag.Title = "Modules";
    var featureId = (long)ViewData["FeatureId"];
}
<table class="datatable full">
    <thead>
        <tr>
            <th>
                @Html.Localize("No.")
            </th>
            <th>
                @Html.Localize("Name")
            </th>
            <th>
                @Html.Localize("Description")
            </th>
            <th>
                @Html.Localize("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        { 
            <tr>
                <td>
                    @(i + 1)
                </td>
                <td>
                    @Model.ElementAt(i).Name
                </td>
                <td>
                    @Model.ElementAt(i).Description
                </td>
                <td>
                    <ul class="action-buttons">
                        <li>
                            @Html.ActionLinkButtonSecured(Html.Localize("Partials"), "view-list", "ViewModule", "Application", "Core", new { area = "Core", Id = Model.ElementAt(i).ActionId }, "no-text")
                        </li>
                        <li>
                            @Html.ActionLinkButtonSecured(Html.Localize("Edit"), "pencil", "EditModule", "Application", "Core", new { area = "Core", id = Model.ElementAt(i).ActionId }, "no-text")
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
